<div class="container">
  <h2 class="text-center">Add a New User</h2>
  <div class="col-4">
    <form action='/users' method="POST">
      <div class="form-group">
        <label class="input-text" for="name">Name</label>
        <input class="form-control" type="text" name="name" id="name" placeholder="Please enter your name">
      </div>
      <div class="form-group">
        <label class="input-text" for="typeOfFishing">Favorite Type of Fishing</label>
        <input class="form-control" type="text" name="typeOfFishing" id="typeOfFishing"
          placeholder="What is your favorite type of fishing">
      </div>
      <input class="btn btn-info" type="submit" value="SUBMIT">
    </form>
  </div>
</div>