<div class="row">
    <div class="col s4 m3">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <h3 class="card-title">{{user.name}}</h3>
                <h3 class="card-title">Favorite type of fishing: {{typeOfFishing}}</h3>
                <div class="text-center">
                    <form class="delete-form" action="/users/{{user.id}}?_method=DELETE" method="POST">
                        <input class="action-btn btn btn-danger btn-lg button" type="submit" value="DELETE">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>