<h3 class="card-text sub-main">Check Out Users Favorite Gear</p>

    <a href="/gears/new" class="btn btn-primary btn-lg button">Add a New Gear Kit</a>

    <div class="row">
        {{#each gears}}
        <div class="col s4 m3">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <h3 class="card-title"><a href="/gears/{{id}}">{{rod}}</a></h3>
                    <h3 class="card-title">Favorite Bait: {{bait}}</h3>
                    <h3 class="card-title">Favorite Lure: {{lure}}</h3>
                    <h3 class="card-title">Line Strength: {{lineTest}}</h3>
                </div>
                <div class="text-center">
                    <form class="delete-form" action="/gears/{{id}}?_method=DELETE" method="POST">
                        <input class="action-btn btn btn-danger btn-lg button" type="submit" value="DELETE">
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>