<div class="container">
  <h2 class="text-center">Edit This Gear Kit</h2>
  <div class="col-8">
    <form action="/gears/{{kit.id}}?_method=PUT" method="POST">
      <div class="form-group">
        <label class="input-text" for="rod">Rod</label>
        <input class="form-control" type="text" name="rod" id="rod" value="{{kit.rod}}">
      </div>
      <div class="form-group">
        <label class="input-text" for="bait">Favorite Bait</label>
        <input class="form-control" type="text" name="bait" id="bait" value="{{kit.bait}}">
      </div>
      <div class="form-group">
        <label class="input-text" for="lure">Best Lure</label>
        <input class="form-control" type="text" name="lure" id="lure" value="{{kit.lure}}">
      </div>
      <div class="form-group">
        <label class="input-text" for="lineTest">Favorite Line Test</label>
        <input class="form-control" type="text" name="lineTest" id="lineTest" value="{{kit.lineTest}}">
      </div>
      <input class="btn btn-info" type="submit" value="SUBMIT">
      <div class="box"></div>
    </form>
  </div>
</div>