<div class="row">
    <div class="col s4 m3">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <h3 class="card-title">{{kit.rod}}</h3>
                <h3 class="card-title">Favorite Bait: {{kit.bait}}</h3>
                <h3 class="card-title">Favorite Lure: {{kit.lure}}</h3>
                <h3 class="card-title">Line Strength: {{kit.lineTest}}</h3>
                <div class="text-center">
                    <form class="delete-form" action="/gears/{{kit.id}}?_method=DELETE" method="POST">
                        <input class="action-btn btn btn-danger btn-lg button" type="submit" value="DELETE">
                    </form>
                </div>
                <div>
                    <a class="action-btn btn btn-info btn-lg button" href="/gears/{{kit.id}}/edit">EDIT</a>
                </div>
            </div>
        </div>
    </div>
</div>