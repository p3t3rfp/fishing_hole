<div class="row">
    <div class="col s4 m3">
        <div class="card blue-grey darken-1">
            <div class="card-image">
                <img src="{{fishingHole.image}}" alt="fishing hole">
            </div>
            <div class="card-content white-text">
                <h3 class="card-title">{{fishingHole.name}}</h3>
                <h3 class="card-title">Best type of fishing: {{fishingHole.bestFish}}</h3>
                <div class="text-center">
                    <form class="delete-form" action="/fishingHoles/{{fishingHole.id}}?_method=DELETE" method="POST">
                        <input class="action-btn btn btn-danger btn-lg button" type="submit" value="DELETE">
                    </form>
                </div>
                <div>
                    <a class="action-btn btn btn-info btn-lg button"
                        href="/fishingHoles/{{fishingHole.id}}/edit">EDIT</a>
                </div>
            </div>
        </div>
    </div>
</div>