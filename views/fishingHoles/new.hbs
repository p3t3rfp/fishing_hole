<div class="container">
  <h2 class="text-center">Add a New Fishing Hole</h2>
  <div class="col-4">
    <form action='/fishingHoles' method="POST">
      <div class="form-group">
        <label class="input-text" for="name">Name</label>
        <input class="form-control" type="text" name="name" id="name" placeholder="Enter the name of the fishing hole">
      </div>
      <div class="form-group">
        <label class="input-text" for="bestFish">Best Type of Fish to Catch</label>
        <input class="form-control" type="text" name="bestFish" id="bestFish"
          placeholder="What is the best type of fish to catch">
      </div>
      <div class="form-group">
        <label class="input-text" for="image">Add an Image</label>
        <input class="form-control" type="text" name="image" id="image"
          placeholder="Please add an image">
      </div>
      <input class="btn btn-info" type="submit" value="SUBMIT">
    </form>
  </div>
</div>