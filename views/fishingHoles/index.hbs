<h3 class="card-text sub-main">Check out these favorite spots</p>

    <a href="/fishingHoles/new" class="btn btn-primary btn-lg button">Add a new fishing hole</a>

    <div class="row">
        {{#each fishingHoles}}
        <div class="col s4 m3">
            <div class="card blue-grey darken-1">
                <div class="card-image">
                    <img src="{{image}}" alt="fishing hole">
                </div>
                <div class="card-content white-text">
                    <h3 class="card-title"><a href="/fishingHoles/{{id}}">{{name}}</a></h3>
                    <h3 class="card-title">Best type of fishing: {{bestFish}}</h3>
                </div>
            </div>
        </div>
        {{/each}}
    </div>