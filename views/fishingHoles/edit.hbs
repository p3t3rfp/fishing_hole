<div class="container">
  <h2 class="text-center">Edit This Fishing Hole</h2>
  <div class="col-8">
    <form action="/fishingHoles/{{fishingHole.id}}?_method=PUT" method="POST">
      <div class="form-group">
        <label class="input-text" for="name">Name</label>
        <input class="form-control" type="text" name="name" id="name" value="{{fishingHole.name}}">
      </div>
      <div class="form-group">
        <label class="input-text" for="bestFish">Best Fish to Catch</label>
        <input class="form-control" type="text" name="bestFish" id="bestFish" value="{{fishingHole.bestFish}}">
      </div>
      <div class="form-group">
        <label class="input-text" for="image">Image</label>
        <input class="form-control" type="text" name="image" id="image" value="{{fishingHole.image}}">
      </div>
      <input class="btn btn-info" type="submit" value="SUBMIT">
      <div class="box"></div>
    </form>
  </div>
</div>